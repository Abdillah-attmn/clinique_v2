<div class=bg-white>
  <div class='container p-3'>
    <div class='row justify-content-center'>
      <div class= "border rounded col-12 col-sm-10 col-md-8 col-lg-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2 class="text-center m-3">Créer ton compte</h2>
          <%= devise_error_messages! %>

          <div class="form-inputs">
            <div class="row mb-3">
              <div class="col-6">
                <%= f.label "Prénom" %>
                <%= f.text_field :firstname,
                            label: false,
                            required: true,
                            autofocus: true,
                            autocomplete: "given-name", class:"form-control" %>
              </div>
              <div class="col-6">
                <%= f.label "Nom" %>
                <%= f.text_field :lastname,
                            label: false,
                            required: true,
                            autofocus: true,
                            autocomplete: "family-name", class:"form-control" %>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-4">
                <%= f.label "Email" %>
                <abbr title="required">*</abbr>
              </div>
              <div class="col-8">
                <%= f.text_field :email,
                            label: false,
                            required: true,
                            autofocus: true,
                            autocomplete: "email", class:"form-control" %>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-4">
                <%= f.label "Mot de passe" %>
                <abbr title="required">*</abbr>
              </div>
              <div class="col-8">
                <%= f.text_field :password,
                            label: false,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            autocomplete: "new-password", class:"form-control"  %>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-4">
                <%= f.label "Confirmation du Mot de passe" %>
                <abbr title="required">*</abbr>
              </div>
              <div class="col-8">
                <%= f.text_field :password_confirmation,
                            label: false,
                            autocomplete: "new-password", class:"form-control" %>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-4">
                <%= f.label "Téléphone" %>
                <abbr title="required">*</abbr>
              </div>
              <div class="col-8">
                <%= f.text_field :phone_number,
                            label: false,
                            autofocus: true,
                            class: "form-control", autocomplete: "tel-national" %>
              </div>
            </div>

          <div class="form-actions">
            <%= f.submit "S'inscrire" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
