<div class=bg-white>
  <div class='container p-3'>
    <div class='row justify-content-center'>
      <div class= "border rounded col-12 col-sm-10 col-md-8 col-lg-5 clr-dr">
        <%= form_for @doctor do |f| %> <h2 class="text-center m-3">Inscription d'un docteur</h2>
          <% if @doctor.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

              <ul>
              <% @doctor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-inputs">

            <%= f.fields_for :user_attributes, @doctor.user || User.new do |u| %>
              <div class="row mb-3">
                <div class="col-6">
                  <%= u.label "Prénom" %>
                  <%= u.text_field :firstname,
                              required: true,
                              autofocus: true,
                              autocomplete: "given-name",
                              class:"form-control" %>
                </div>
                <div class="col-6">
                  <%= u.label "Nom" %>
                  <%= u.text_field :lastname,
                              required: true,
                              autofocus: true,
                              autocomplete: "family-name",
                              class:"form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-4">
                  <%= u.label "Email" %>
                  <abbr title="required">*</abbr>
                </div>
                <div class="col-8">
                  <%= u.text_field :email,
                              label: false,
                              required: true,
                              autofocus: true,
                              autocomplete: "email", class:"form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-4">
                  <%= u.label "Mot de passe" %>
                  <abbr title="required">*</abbr>
                </div>
                <div class="col-8">
                  <%= u.text_field :password,
                                    type: "password",
                                    label: false,
                                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                    autocomplete: "new-password", class:"form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-4">
                  <%= u.label "Confirmation du Mot de passe" %>
                  <abbr title="required">*</abbr>
                </div>
                <div class="col-8">
                  <%= u.text_field :password_confirmation,
                                    type: "password",
                                    label: false,
                                    autocomplete: "new-password", class:"form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-4">
                  <%= u.label "Téléphone" %>
                  <abbr title="required">*</abbr>
                </div>
                <div class="col-8">
                  <%= u.text_field :phone_number,
                              label: false,
                              autofocus: true,
                              class: "form-control", autocomplete: "tel-national"%>
                </div>
              </div>
  	        <% end %>

            <div class="row mb-3 border-top pt-3">
              <div class="col-4">
                <%= f.label "Spécialité" %>
                <abbr title="required">*</abbr>
              </div>
              <div class="col-8">
                <%= f.select  :speciality, Doctor::SPECIALITY,
                              label: false,
                              autofocus: true,
                              class:"form-control" %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-around mb-2">
            <%- if request.path == new_doctor_path %>
              <%= link_to "Annuler", new_user_session_path, class: "btn btn-clr py-3 px-5" %><br />
            <% end -%>

            <div class="form-actions">
              <%= f.submit "S'inscrire", class: "btn btn-clr-dr py-3 px-5" %>
            </div>

          </div>

        <% end %>


        <!--%= render "devise/shared/links" %-->
      </div>
    </div>
  </div>
</div>
